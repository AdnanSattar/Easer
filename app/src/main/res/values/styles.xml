<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActivityDialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.EventPluginViewPager">
        <item name="android:paddingLeft">@dimen/eventpluginviewpager_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/eventpluginviewpager_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/eventpluginviewpager_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/eventpluginviewpager_vertical_margin</item>
    </style>

    <style name="LR">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="LR.Left">
        <item name="android:layout_weight">@integer/lr_weight_left</item>
        <item name="android:paddingLeft">@dimen/lr_padding_outer</item>
        <item name="android:paddingRight">@dimen/lr_padding_inner</item>
    </style>

    <style name="LR.Right">
        <item name="android:layout_weight">@integer/lr_weight_right</item>
        <item name="android:paddingLeft">@dimen/lr_padding_inner</item>
        <item name="android:paddingRight">@dimen/lr_padding_outer</item>
    </style>

    <style name="LR.Input">
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="LR.Input.Left">
        <item name="android:layout_weight">@integer/lr_input_weight_left</item>
    </style>

    <style name="LR.Input.Right">
        <item name="android:layout_weight">@integer/lr_input_weight_right</item>
        <item name="android:ems">10</item>
    </style>

    <style name="AppTheme.Dialog" parent="AppTheme" />

    <style name="AppTheme.Dialog.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorDialogTitle</item>
    </style>

    <style name="ListItem" parent="AppTheme" />

    <style name="ListItem.OperationSelection">
        <item name="android:padding">@dimen/list_item_operation_selection_margin</item>
        <item name="android:textSize">@dimen/list_item_operation_selection_text_size</item>
    </style>

    <style name="EmptyActivity" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#000</item>
    </style>

</resources>
