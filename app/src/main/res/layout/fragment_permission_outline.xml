<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boarder_alert"
    tools:context="ryey.easer.core.ui.PermissionOutlineFragment">

    <TextView
        android:id="@+id/textView_lack_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_alert"
        android:text="@string/text_lack_permission" />

    <Button
        android:id="@+id/button_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_lack_permission"
        android:layout_centerHorizontal="true"
        android:text="@string/button_request_permission" />

</RelativeLayout>
