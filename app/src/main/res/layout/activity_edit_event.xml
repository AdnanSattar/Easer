<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ryey.easer.core.ui.EditEventActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/LR.Left"
            android:text="@string/text_title" />

        <EditText
            style="@style/LR.Right"
            android:id="@+id/editText_event_title"
            android:hint="@string/hint_event_title" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/LR.Left"
            android:text="@string/text_parent" />

        <Spinner
            style="@style/LR.Right"
            android:id="@+id/spinner_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/LR.Left"
            android:text="@string/text_profile" />

        <Spinner
            style="@style/LR.Right"
            android:id="@+id/spinner_profile" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_events">

        </LinearLayout>

    </ScrollView>

</LinearLayout>
